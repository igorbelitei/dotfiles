#
# Test helpers
#-----------------------------------------------------------------------------

# assert $1 contains $2
assertIncludes() {
  result=1; if echo "$1" | grep -q "$2"; then result=0; fi
  assertTrue "'$1' should have contained '$2'" $result
}

assertNotIncludes() {
  result=1; if echo "$1" | grep -q "$2"; then result=0; fi
  assertFalse "'$1' should not have contained '$2'" $result
}

strip_colors() {
  sed -r "s/\x1B\[([0-9]{1,2}(;[0-9]{1,2})?)?[m|K]//g"
}

